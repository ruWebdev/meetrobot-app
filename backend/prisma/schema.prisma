// Prisma schema placeholder for workspace-centric model
// Business logic not implemented; structure only

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ParticipationStatus {
  pending
  accepted
  declined
  tentative
}

enum AttendanceStatus {
  present
  late
  absent
}

enum TimeSlotStatus {
  AVAILABLE
  RESERVED
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED_BY_CLIENT
  CANCELLED_BY_PROVIDER
  NO_SHOW
  COMPLETED
}

model User {
  id          String   @id @default(uuid())
  telegramId  String   @unique
  name        String?
  createdAt   DateTime @default(now())
  memberships WorkspaceMember[]
  workspaces  Workspace[]
  participations Participation[]
  createdEvents Event[] @relation("EventCreatedBy")
  attendances Attendance[]
}

model Workspace {
  id           String             @id @default(uuid())
  name         String
  ownerId      String
  owner        User               @relation(fields: [ownerId], references: [id])
  createdAt    DateTime           @default(now())
  members      WorkspaceMember[]
  telegramGroups TelegramGroup[]
  events Event[]
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  role        String    @default("MEMBER")
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
  createdAt   DateTime  @default(now())

  @@unique([userId, workspaceId])
}

model TelegramGroup {
  id             String    @id @default(uuid())
  telegramChatId String    @unique
  title          String
  type           String
  workspace      Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId    String
  createdAt      DateTime  @default(now())
}

model Event {
  id            String   @id @default(uuid())
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId   String

  parentEvent   Event?   @relation("EventToSubEvents", fields: [parentEventId], references: [id], onDelete: Cascade)
  parentEventId String?
  subEvents     Event[]  @relation("EventToSubEvents")

  type          String
  title         String
  description   String?
  date          DateTime @db.Date
  timeStart     String
  timeEnd       String
  location      String
  status        String   @default("scheduled")
  deletedAt     DateTime?

  createdBy     User     @relation("EventCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  createdById   String
  createdAt     DateTime @default(now())

  participations Participation[]
  attendances Attendance[]

  @@index([workspaceId])
  @@index([parentEventId])
  @@index([createdById])
}

model Participation {
  id               String   @id @default(uuid())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
  event            Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId          String

  responseStatus     ParticipationStatus   @default(pending)
  responseUpdatedAt  DateTime?

  @@unique([userId, eventId])
  @@index([eventId])
}

model Attendance {
  id        String           @id @default(uuid())
  event     Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  status    AttendanceStatus
  markedAt  DateTime         @default(now())

  @@unique([eventId, userId])
}

model Provider {
  id             String   @id @default(uuid())
  name           String
  telegramUserId String?  @unique
  createdAt      DateTime @default(now())

  services  Service[]
  timeSlots TimeSlot[]
  bookings  Booking[]
}

model Client {
  id             String   @id @default(uuid())
  name           String
  telegramUserId String   @unique
  createdAt      DateTime @default(now())

  bookings Booking[]
}

model Service {
  id                  String   @id @default(uuid())
  provider            Provider @relation(fields: [providerId], references: [id], onDelete: Restrict)
  providerId          String
  title               String
  durationMinutes     Int
  price               Int
  description         String?
  bufferBeforeMinutes Int      @default(0)
  bufferAfterMinutes  Int      @default(0)
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())

  timeSlots TimeSlot[]
  bookings  Booking[]

  @@unique([id, providerId])
  @@index([providerId])
}

model TimeSlot {
  id        String        @id @default(uuid())
  provider  Provider      @relation(fields: [providerId], references: [id], onDelete: Restrict)
  providerId String
  service   Service       @relation(fields: [serviceId, providerId], references: [id, providerId], onDelete: Restrict)
  serviceId String
  startAt   DateTime
  endAt     DateTime
  status    TimeSlotStatus
  createdAt DateTime      @default(now())

  booking Booking?

  @@unique([id, providerId, serviceId])

  @@index([startAt])
  @@index([providerId, startAt])
}

model Booking {
  id          String        @id @default(uuid())
  client      Client        @relation(fields: [clientId], references: [id], onDelete: Restrict)
  clientId    String
  provider    Provider      @relation(fields: [providerId], references: [id], onDelete: Restrict)
  providerId  String
  service     Service       @relation(fields: [serviceId], references: [id], onDelete: Restrict)
  serviceId   String
  timeSlot    TimeSlot      @relation(fields: [timeSlotId, providerId, serviceId], references: [id, providerId, serviceId], onDelete: Restrict)
  timeSlotId  String        @unique
  status      BookingStatus
  cancelReason String?
  createdAt   DateTime      @default(now())

  @@index([clientId])
  @@index([providerId])
  @@index([serviceId])
}
