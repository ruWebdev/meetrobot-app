// Prisma schema placeholder for workspace-centric model
// Business logic not implemented; structure only

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ParticipationStatus {
  pending
  accepted
  declined
  tentative
}

enum AttendanceStatus {
  present
  late
  absent
}

model User {
  id          String   @id @default(uuid())
  telegramId  String   @unique
  name        String?
  createdAt   DateTime @default(now())
  memberships WorkspaceMember[]
  workspaces  Workspace[]
  participations Participation[]
  createdEvents Event[] @relation("EventCreatedBy")
  attendances Attendance[]
}

model Workspace {
  id           String             @id @default(uuid())
  name         String
  ownerId      String
  owner        User               @relation(fields: [ownerId], references: [id])
  createdAt    DateTime           @default(now())
  members      WorkspaceMember[]
  telegramGroups TelegramGroup[]
  events Event[]
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  role        String    @default("MEMBER")
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
  createdAt   DateTime  @default(now())

  @@unique([userId, workspaceId])
}

model TelegramGroup {
  id             String    @id @default(uuid())
  telegramChatId String    @unique
  title          String
  type           String
  workspace      Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId    String
  createdAt      DateTime  @default(now())
}

model Event {
  id            String   @id @default(uuid())
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId   String

  parentEvent   Event?   @relation("EventToSubEvents", fields: [parentEventId], references: [id], onDelete: Cascade)
  parentEventId String?
  subEvents     Event[]  @relation("EventToSubEvents")

  type          String
  title         String
  description   String?
  date          DateTime @db.Date
  timeStart     String
  timeEnd       String
  location      String
  status        String   @default("scheduled")

  createdBy     User     @relation("EventCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  createdById   String
  createdAt     DateTime @default(now())

  participations Participation[]
  attendances Attendance[]

  @@index([workspaceId])
  @@index([parentEventId])
  @@index([createdById])
}

model Participation {
  id               String   @id @default(uuid())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
  event            Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId          String

  responseStatus     ParticipationStatus   @default(pending)
  responseUpdatedAt  DateTime?

  @@unique([userId, eventId])
  @@index([eventId])
}

model Attendance {
  id        String           @id @default(uuid())
  event     Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  status    AttendanceStatus
  markedAt  DateTime         @default(now())

  @@unique([eventId, userId])
}
